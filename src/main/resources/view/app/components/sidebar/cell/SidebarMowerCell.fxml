<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<HBox fx:id="sidebarMowerCell" alignment="CENTER_LEFT" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="290.0" styleClass="cell-container" stylesheets="@SidebarMowerCell.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <!-- ___________-->
        <!-- POWER ICON -->
        <!-- ___________-->
        <FontAwesomeIconView fx:id="powerIcon" fill="LIME" glyphName="POWER_OFF" size="1.5em">
            <HBox.margin>
                <Insets left="8.0" right="10.0" top="2.0" />
            </HBox.margin>
        </FontAwesomeIconView>

        <!-- ___________-->
        <!-- MOWER NAME -->
        <!-- ___________-->
        <Label fx:id="mowerName" text="Mower">
            <font>
                <Font name="Roboto Light" size="14.0" />
            </font>
            <HBox.margin>
                <Insets right="7.0" />
            </HBox.margin>
        </Label>
      <FontAwesomeIconView fx:id="smartIcon" fill="#fefdaf" glyphName="LIGHTBULB_ALT" layoutX="97.0" layoutY="30.0" size="1.4em">
         <HBox.margin>
            <Insets right="10.0" top="2.0" />
         </HBox.margin>
      </FontAwesomeIconView>

        <!-- ________________-->
        <!-- BATTERY SECTION -->
        <!-- ________________-->
        <FontAwesomeIconView fx:id="batteryIcon" fill="#fefdaf" glyphName="BATTERY_FULL" layoutX="18.0" layoutY="40.0" size="1.4em">
            <HBox.margin>
                <Insets right="5.0" top="2.0" />
            </HBox.margin>
        </FontAwesomeIconView>

        <Label fx:id="batteryEnergyLabel" text="100">
            <font>
                <Font name="Ebrima" size="13.0" />
            </font>
            <HBox.margin>
                <Insets right="5.0" top="2.0" />
            </HBox.margin>
            <padding>
                <Insets bottom="2.0" />
            </padding>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <!-- __________________-->
        <!-- DIRECTION SECTION -->
        <!-- __________________-->
        <Label fx:id="directionAbbreviation" text="N">
            <font>
                <Font name="Roboto Light" size="14.0" />
            </font>
            <HBox.margin>
                <Insets right="3.0" />
            </HBox.margin>
        </Label>
        <FontAwesomeIconView fx:id="directionIcon" fill="#fefdaf" glyphName="ARROW_UP" size="1.1em">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
        </FontAwesomeIconView>
        <HBox fx:id="coordinateContainer" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="18.0" styleClass="coordinate-container">
             <children>
                <Label fx:id="mowerPositionLabel" text="2, 3">
                   <padding>
                      <Insets left="5.0" right="5.0" />
                   </padding>
                   <font>
                      <Font size="10.0" />
                   </font>
                </Label>
             </children>
             <HBox.margin>
                <Insets right="8.0" />
             </HBox.margin>
        </HBox>
    </children>
</HBox>
